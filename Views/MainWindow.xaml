<Window x:Class="InventoryManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory Management" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <Button Content="Products" Command="{Binding ShowProductsCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Suppliers" Command="{Binding ShowSuppliersCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Stock Alerts" Command="{Binding ShowAlertsCommand}" Margin="5" Padding="10,5"/>
        </StackPanel>

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>